# Discord Bot Token (Required)
# https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Google Gemini API Key (Required)
# https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Service Account Key (Optional)
# Required for Google Cloud Speech-to-Text
# https://cloud.google.com/speech-to-text/docs/quickstart-client-libraries
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# VoiceVox Server URL (Optional, default: http://127.0.0.1:50021)
# https://voicevox.hiroshiba.jp/
VOICEVOX_URL=http://127.0.0.1:50021

# Audio Settings (Optional)
SAMPLE_RATE=48000
SILENCE_DURATION=1000
MIN_RECORDING_DURATION=1.5

# LLM Settings (Optional)
# LLM_PROVIDER: "gemini" or "local" (default: gemini)
LLM_PROVIDER=gemini
MODEL_NAME=gemini-2.0-flash
MAX_TOKENS=150

# Local LLM API Settings (Required when LLM_PROVIDER=local)
# Auto-start the local API server on bot startup (default: true)
LOCAL_LLM_AUTO_START=true
# URL for the local LLM API server
LOCAL_LLM_URL=http://localhost:8000
# Path to the Python script for local LLM API server
LOCAL_LLM_SCRIPT_PATH=./llmapi.py

# TTS Settings (Optional)
SPEAKER=1
